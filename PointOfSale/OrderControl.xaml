<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" Height="600" Width="1240">

    <Grid HorizontalAlignment="Center" Width="1138">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="400"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <Border x:Name="Container" Grid.Column="0" Grid.Row="1">

            <local:MenuItemSelectionControl Grid.Column="0" Grid.Row="1" Margin="-10,10,0,0" HorizontalAlignment="Left" Width="643" Height="565" VerticalAlignment="Top"/>
        </Border>
        <local:OrderSummaryControl Grid.Row="1" Margin="35,7,0,0" HorizontalAlignment="Left" Width="377" Grid.Column="1" Height="390" VerticalAlignment="Top"/>
        <Button  Grid.Column="0" Background="Blue" Foreground="White" Margin="350,0,46,0" Click="CancelOrder" >Cancel Order</Button>
        <Button Grid.Column="1" Background="Blue" Foreground="White" HorizontalContentAlignment="Center" Margin="0,0,170,0" Click="CompleteOrder">Complete Order</Button>
        <Button Grid.Column="0" Background="Blue" Foreground="White" Margin="0,0,376,0" Click="ItemSelection">Item Selection</Button>


    </Grid>






</UserControl>
