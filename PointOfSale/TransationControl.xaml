<UserControl x:Class="PointOfSale.TransationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="600" Width="1258">



    <Grid HorizontalAlignment="Center" Width="1303">



        <Button Content="Cash" FontSize="20" HorizontalAlignment="Left" Margin="721,354,0,0" VerticalAlignment="Top" Width="123" Height="52" RenderTransformOrigin="0.129,-0.564" Click="OnCashClick"/>
        <Button Content="Credit/Debit" FontSize="20" HorizontalAlignment="Left" Margin="931,354,0,0" VerticalAlignment="Top" Width="134" Height="52" RenderTransformOrigin="4.084,0.551" Click="OnCreditClick"/>
        <TextBlock FontSize ="20" HorizontalAlignment="Left" Margin="821,300,0,0" Text="Total" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" RenderTransformOrigin="1.121,0.589"/>
        <TextBlock Name="TotalCost" FontSize="20" HorizontalAlignment="Left" Margin="931,306,0,0" Text="{Binding Path=TotalCost, Mode =OneWay,StringFormat=c}" TextWrapping="Wrap" VerticalAlignment="Top"/>


    </Grid>





</UserControl>
